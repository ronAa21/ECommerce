<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <style>
        /* General */
        * {
            font-family: "Poppins", sans-serif;
        }

        body{ 
            margin: 0px;
        }

        .main-wrap {
            display: flex;
            gap: 40px;
        }

        /* nav bar */
        nav {
            background-color: white;
            display: flex;
            justify-content: space-between;
            padding: 15px 50px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .logo {
            width: 100px;
        }

        .wrap {
            display: flex;
            gap: 10px;
            align-self: center;
        }

        .panel-link, .regis-link, .view-action {
            color: limegreen;
            cursor: pointer;
        }

        .panel-link {
            font-weight: 400;
            font-size: 20px;
            text-decoration: none;
        }

        .panel-link:hover {
            text-decoration: underline;
            transition: ease 0.5s;
        }

        .regis-link {
            border: 1px solid grey;
            border-radius: 20px;
            font-weight: 600;
            font-size: 15px;
            padding: 10px;
            transition: ease 0.5s;
        }

        .regis-link:hover {
            color: white;
            background-color: forestgreen;
            transition: ease 0.5s;
        }
    </style>
</head>
<body>
    <nav>
        <img class="logo" alt="logo" src="~/Content/logo.png"/> 
        <div class="main-wrap">
            <div class="wrap">
                <h2 class="panel-link" id="home">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "panel-link" })</h2>
            </div>
            <div class="wrap">
                <a href="@Url.Action("Checked", "CheckedOut")">
                    <img class="view-action" id="cart" src="~/Content/cart.png" />
                </a>
            </div>
            <div class="wrap">
                <h4 id="sign-in">@Html.ActionLink("Sign In", "SignIn", "Regis", new { area = "" }, new { @class = "regis-link" })</h4>
                <h4 id="regis">@Html.ActionLink("Register", "Register", "Regis", new { area = "" }, new { @class = "regis-link" })</h4>
            </div>
        </div>
    </nav>

    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>
